canvas:hover
  cursor move


.mapboxgl-popup-content
  border-radius 10px 10px 50px 50px
  border 2px solid black

.mapboxgl-popup
  will-change transform
  background-color transparent
  color #fff


.mapboxgl-popup-anchor-bottom
  color black

#map-img
    width 10px
    height auto


